@model NordicDoor_Group15.Core.ViewModels.EditUserViewModel

@{
}

<h1>Details</h1>
@using (Html.BeginForm("OnPost", "User"))
{
<div>
    <h4>User</h4>
    <hr />
   
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.EmployeeNumber)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.EmployeeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.FullName)
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
        <dt class="col-sm-2">
           Roles
        </dt>           
        <dd class="col-sm-10">
                @for (int i = 0; i < @Model.Roles.Count(); i++)
                {
                    <div class="form-check" >
                        @Html.CheckBoxFor(c => @Model.Roles[i].Selected, new { @disabled = "disabled" })
                        @Html.HiddenFor(h => @Model.Roles[i].Value)

                        @Html.LabelFor(l => @Model.Roles[i].Selected, @Model.Roles[i].Text, new {@class="form-check-label"})
                        @Html.HiddenFor(h => @Model.Roles[i].Text)
                    </div>
                }
        </dd>       
    </dl>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.User.Id">Edit</a> 
    <a asp-action="Index">Back to List</a>
</div>
    
}