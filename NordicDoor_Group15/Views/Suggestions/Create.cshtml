@model NordicDoor_Group15.Models.Suggestion
@using Microsoft.AspNetCore.Identity
@using NordicDoor_Group15.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create Suggestion";
}
<h2>Create Suggestion</h2>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" row="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainBody" class="control-label"></label>
                <textarea asp-for="MainBody" class="form-control" row="10"></textarea>
                <span asp-validation-for="MainBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamID" class="control-label"></label>
                <select asp-for="TeamID" class="form-control" asp-items="ViewBag.TeamID">
                    <option value="">Select a team</option>
                </select>
                <span asp-validation-for="TeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="CreatorID" class="control-label"></label>*@
               @* <select asp-for="CreatorID" class="form-control" asp-items="ViewBag.CreatorID">
                    <option value="">Select a user</option>
                </select>*@
                <input asp-for="CreatorID" class="form-control" row="3" hidden readonly value="@UserManager.FindByNameAsync(UserManager.GetUserName(User)).Result.Id">

               @* <span asp-validation-for="CreatorID" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input type='text' asp-for="StartDate" class="form-control" value='@DateTime.Now.ToString()' readonly>

                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <br />
            <td>
                <div class="form-group">
                    <label asp-for="Status" class="control-label">Status (Choose One)</label>
                    <select asp-for="Status" class="form-control" id="Status">
                        <option>Just Do IT!</option>
                        <option>Plan</option>
                        <option>Do</option>
                        <option>Study</option>
                        <option>Act</option>
                        <option>Completed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </td>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" row="3">
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
          @*  <div class="form-group">
                
                <input asp-for="CreatedBy" class="form-control" row="3" readonly hidden value="@UserManager.FindByNameAsync(UserManager.GetUserName(User)).Result.FullName">
                <input asp-for="UpdatedBy" class="form-control" row="3" readonly hidden value="@UserManager.FindByNameAsync(UserManager.GetUserName(User)).Result.FullName">

            </div>*@
            <br />
            <div class="form-group">
                <label class="control-label custom-file-label">Picture File:</label>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="thePicture" id="thePicture">
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='@ViewData["returnURL"]'>Back to Suggestion List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

