@model NordicDoor_Group15.Models.Suggestion

@{
    ViewData["Title"] = "Suggestion Details";
}

<h2>Suggestion Details</h2>

<div>   
    <hr />
     @{
        if (Model.SuggestionPhoto?.Content != null)
        {
            @:<div>
                string imageBase64 = Convert.ToBase64String(Model.SuggestionPhoto.Content);
                string imageSrc = string.Format("data:" + Model.SuggestionPhoto.MimeType + ";base64,{0}", imageBase64);
                <img src="@imageSrc" alt="Picture of Suggestion @Model.Id" title="Picture of Suggestion @Model.Id" class="img-fluid rounded" />
            @:</div><hr />
        }
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MainBody)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MainBody)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creator.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>    
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
 <dd class="col-sm-10">
            @foreach (var item in Model.Photos)
            {
                <img src="@("~/image/"+ item.Title)" asp-append-version="true" width="300px" height="250px" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |

    
  

    <a href='@ViewData["returnURL"]'>Back to Suggestion List</a>

</div>
